<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_website_multi_wh" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.multi.wh</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="website_settings" position="inside">
                <h2>Multi-Warehouse Fulfillment</h2>
                <div class="row mt16 o_settings_container" id="website_multi_wh_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                             <field name="website_multi_warehouse_fulfillment_enabled"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="website_multi_warehouse_fulfillment_enabled"/>
                            <div class="text-muted">
                                Enable multi-warehouse features for this website's orders.
                            </div>
                             <div class="content-group mt16" attrs="{'invisible': [('website_multi_warehouse_fulfillment_enabled', '=', False)]}">
                                <div class="row">
                                    <label for="website_multi_warehouse_fulfillment_warehouse_id" class="col-lg-5 o_light_label"/>
                                    <field name="website_multi_warehouse_fulfillment_warehouse_id"
                                           domain="[('company_id', '=', company_id)]"
                                           context="{'default_company_id': company_id}"/>
                                </div>
                                <div class="text-muted">
                                    Select the distribution center for collecting items when not shipping directly.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>